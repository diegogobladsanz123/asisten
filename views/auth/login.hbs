<body class="hold-transition">


    <div class="login-box text-center panel panel-default">
        <div class="panel-body">

            <div class="login-logo">

                <div class="fadeIn first">
                    <img src="/images/doce-Logo.png" id="icon" alt="User Icon" width="35%" />
                </div>
            </div>


            <!-- /.login-logo -->
            <span class="text-center"></span>
            <H3>UNIDAD EDUCATIVA DOCE DE MAYO <br> <small>CONTROL DE ASISTENCIA DE ESTUDIANTES Y DOCENTES </small></H3>

            <div class="login-box-body">

                <p class="login-box-msg">Iniciar sesi칩n</p>

                <form action="/auth" method="post" id="frm-login" class="ui form">
                    <div class="field">
                        <select name="anio_lectivo" id="" class="ui search dropdown">
                            <option value="">Seleccione...</option>
                            {{#each anio}}
                            <option value="{{idanio_lectivo}}">{{anio_lectivo}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Nombre de usuario" name="username">
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" class="form-control" placeholder="Contrase침a" name="password">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    {{#if type}}
                    <div class="alert alert-{{type}} alert-dismissible show " role="alert" id="div-message">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{message}}
                    </div>
                    {{/if}}
                    <div class="ui error message">
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            {{!-- <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div> --}}
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Ingresar</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                {{!-- <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign
                    in using
                    Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign
                    in using
                    Google+</a>
            </div> --}}
                <!-- /.social-auth-links -->




            </div>
            <!-- /.login-box-body -->
        </div>

    </div>
    <!-- /.login-box -->

    <!-- jQuery 3 -->
    <script src="../../bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="../../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../../plugins/iCheck/icheck.min.js"></script>

</body>

<script type="text/javascript">
    $(document).ready(function () {
        $('#frm-login').form({
            anio_lectivo: {
                identifier: 'anio_lectivo',
                rules: [{ type: 'empty', prompt: 'Por favor selecione el a침o lectivo' }]
            },
            username: {
                identifier: 'username',
                rules: [{
                    type: 'empty',
                    prompt: 'Igrese el usuario'
                }]
            },
            password: {
                identifier: 'password',
                rules: [{
                    type: 'empty',
                    prompt: 'Ingrese la contrase침a'
                }]
            }

        }, {
            onSuccess: (e) => {
                console.log('Sending Login Form');
            }

        })

        $('.ui .dropdown').dropdown();
    })
</script>